</head>

<body>

  <div class="card-header">
    <h1 align="center"> Bands List</h1>
    <span style="float:right;"><button class="btn btn-dark" onclick="location.href = './logout';">Logout</button></span>
    <h4>Hello {{name}}</h4><button class="btn btn-dark" onclick="location.href = './profile';">Profile</button>
    <hr>
    <br>
    <center>
      <form method="post" align="center" action="/add">
        <div style="text-align:center;">
          <input type="text" style="width: 560px; margin-left : 340px" class="form-control" placeholder="Add new band to the list..."
            name="bandName">
        </div>
      </form>
    </center>
  </div>
  <div class="card-body">
    <div class="input-group form-group">
      <div class="input-group-prepend">
      </div>
      <div class="container">
      <table bgcolor="black" border="2" align="center"  cellpadding="10" cellspacing="10">
        <tr>
          <th style="text-align:center">BandName</th>
          <th style="text-align:center">Actions</th>
        </tr>
        {{#each bands as |band|}}
        <tr>
          <td style="text-align:center">{{band.bandName}}</td>
          <td style="text-align:center"><button class="btn btn-dark" onclick="location.href = './delete/{{band.Sno}}';">DEL‚ùå</button>
            <button class="btn btn-dark" onclick="location.href = './update/{{band.Sno}}';">EDITüìù</button></td>
        </tr>
        {{/each}}
      </table>
    </div>
  </div>
  </form>
  </div>

